{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution":"node",
    "strict": true,
    "preserveValueImports": false,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules/**", "output/**", "integration-tests/**"]
}
